<div class="card shadow col-4 p-4 m-2" style="width: 18rem;">
    <img src="@memory.Image" class="card-img-top" alt="@memory.Name">
    <div class="card-body">
        <h5 class="card-title">@memory.Name</h5>

        <div class="d-flex justify-content-between">
            <span>
                @memory.Description
            </span>
            <span>
                @memory.Date
            </span>

        </div>
        <div class="d-flex justify-content-around mt-4">
            <button class="btn btn-primary" @onclick="editMemory">Edit</button>
            <button class="btn btn-danger" @onclick="removeMemory">Delete</button>
        </div>
    </div>
</div>


@code {

    [Parameter]

    public MyMemory memory { get; set; } = default!; //in future a memory will be passed

    [Parameter]
    public EventCallback<MyMemory> OnRemoveMemory { get; set; } //communicates with parent to add newly added memory to list

    public async Task removeMemory()
    {
        await OnRemoveMemory.InvokeAsync(memory);
    }
    [Parameter]
    public EventCallback<MyMemory> OnEditMemory { get; set; } //communicates with parent to add newly added memory to list

    public async Task editMemory()
    {
        await OnEditMemory.InvokeAsync(memory);
    }
}
